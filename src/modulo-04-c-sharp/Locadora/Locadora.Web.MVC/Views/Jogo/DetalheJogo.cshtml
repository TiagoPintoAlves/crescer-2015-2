@model Locadora.Web.MVC.Models.JogoPropriedadeModel
@{
    ViewBag.Title = "Detalhes Jogo";
}

<h1 class="text-center">Detalhes do jogo</h1>

<section class="col-lg-12">
    <div class="col-lg-push-6"  >
        <div class="panel panel-default">
            <div class="panel-heading text-center">
                <h3>@Model.Nome</h3>
                <img class="center-block" width="420" height="315" src="@Url.Content(Model.Imagem)" />
            </div>
            <div class="panel-body">
                <h4>Descrição: @Model.Descricao</h4>
                <h4>Categoria: @Model.Categoria</h4>
                <h4>Selo: @Model.Selo</h4>
                <iframe class="text-center" width="420" height="315" src="@Model.Video" frameborder="0" allowfullscreen></iframe>
            </div>
        </div>
    </div>
</section>