@model RelatorioJogosDisponiveisModel
@{
    ViewBag.Title = "JogosDisponiveis";
}

<h2>Jogos Disponiveis</h2>

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Categoria</th>
            <th>Preço</th>
        </tr>
    </thead>
    @foreach (var jogo in Model.Jogos)
    {
        <tr>
            <td>@Html.ActionLink(jogo.Nome, "DetalhesDoJogo", "Jogo", new { id = jogo.IdJogo }, null)</td>
            <td>@jogo.Categoria</td>
            <td>@jogo.Preco.ToString("c")</td>
        </tr>
    }
</table>

Quantidade de jogos: @Model.QuantidadeTotalDeJogos <br />
Jogo mais caro: @Model.JogoMaisCaro <br />
Jogo mais barato: @Model.JogoMaisBarato
