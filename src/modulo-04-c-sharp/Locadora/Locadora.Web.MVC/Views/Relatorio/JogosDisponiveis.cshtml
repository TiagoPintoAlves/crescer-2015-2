@model Locadora.Web.MVC.Models.RelatorioModel

@{
    ViewBag.Title = "Jogos Disponiveis";
}
@if (TempData["Mensagem"] == null)
{
    
    <h2>Jogos Disponiveis</h2>
    
    <div style="text-align: center; padding-top:initial">
        <a href="~/Jogo/Manter/">Cadastrar Novo Jogo</a>
    </div>
    
    <table class="table table-striped table-bordered table-hover" align="center" border="0">
        <thread>
            <tr>
                <td>Nome</td>
                <td>Categoria</td>
                <td></td>
                <td></td>
            </tr>
        </thread>

        <tbody>
            @foreach (var jogo in @Model.Jogos)
            {
                <tr>
                    <td>@jogo.Nome</td>
                    <td>@jogo.Categoria</td>
                    <td>
                        <a href="~/Jogo/DetalheJogo/@jogo.Id">Detalhes</a>
                    </td>
                    <td>
                        <a href="~/Jogo/Manter/@jogo.Id">Editar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div>
            <a class="text-center" colspan ="3">Quantidade Total de Jogos: @Model.QuantidadeTotal</a>
    </div>
}
else
{
    <h2 class="text-center">@TempData["Mensagem"]</h2>
}