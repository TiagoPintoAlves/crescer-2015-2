@model LoginModel
@{
    ViewBag.Title = "Sign In";
}

<h2>Login</h2>

@using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "form" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { @class = "from-control", placeholder = "Digite seu Email" })
        @Html.ValidationMessageFor(m => m.Email)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Senha)
        @Html.PasswordFor(m => m.Senha, new { @class = "from-control", placeholder = "Digite sua Senha" })
        @Html.ValidationMessageFor(m => m.Senha)
    </div>

    <input type="submit" name="enviar" value="Login" />

    <p>
        <br />
        @Html.ValidationMessage("INVALID")
    </p>
}